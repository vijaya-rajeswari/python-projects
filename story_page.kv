MDScreen:
    name: "story_page"
    StoryPage:
        id: story
        canvas:
            Color:
                rgb: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                texture: self.story_background
        Image:
            id: story_image
            size_hint: None, None
            size: "350dp", "350dp"
            pos_hint: {"center_x": .5, "center_y": .5}
        MDIconButton:
            icon: "code-less-than"
            pos_hint: {"left": 1, "center_y": .5}
            user_font_size: "35sp"
            theme_text_color: "Custom"
            text_color:  1, 1, 1, 1
            on_release: app.previous_stories()
        MDIconButton:
            icon: "code-greater-than"
            pos_hint: {"right": 1, "center_y": .5}
            theme_text_color: "Custom"
            text_color:  1, 1, 1, 1
            on_release: app.next_stories()
        MDRelativeLayout:
            pos_hint: {"top": 1}
            size_hint: None, None
            size: "350dp", "60dp"
            UserImage:
                id: user_image
                size_hint: None, None
                size: "40dp", "40dp"
                pos_hint: {"center_x": .1, "center_y": .5}
                canvas:
                    Color:
                        rgb: 1, 1, 1, 1
                    RoundedRectangle:
                        source: self.image_source
                        size: self.size
                        pos: self.pos
                        radius: [50]
            MDLabel:
                id: user_id
                font_size: "18sp"
                pos_hint: {"center_x": .7, "center_y": .5}
                bold: True
                color: 1, 1, 1, 1
            MDIconButton:
                icon: "close"
                pos_hint: {"right": 1, "center_y": .5}
                theme_text_color: "Custom"
                text_color:  1, 1, 1, 1
                on_release:
                    root.manager.current= "home page"
